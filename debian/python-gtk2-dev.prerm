#!/bin/sh

set -e

PYTHON_DEFAULT=$(pyversions --default)

this="python-gtk2-dev"

pc_files() {
    runtime="$1"

    dpkg -L "$this" | sed -n -e "s#^/usr/lib/pkgconfig/$runtime/##p"
}

if [ "$1" = "remove" ]; then
    cd /usr/lib/pkgconfig

    for f in $(pc_files $PYTHON_DEFAULT); do
        rm -f "$f"
    done
fi

